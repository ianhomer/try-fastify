{
  "name": "root",
  "version": "0.0.1",
  "scripts": {
    "audit": "lerna exec npm audit",
    "build:watch": "lerna run build:watch",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "lint": "run-s -s eslint prettier",
    "lint:fix": "run-s eslint:fix prettier:fix",
    "eslint": "lerna run lint",
    "eslint:fix": "lerna run lint:fix",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "start": "run-s bootstrap start:lerna",
    "start:lerna": "lerna run start --parallel",
    "test": "lerna run test",
    "update": "npx npm-check-updates -u && npx lerna exec -- npx npm-check-updates -u && lerna clean --yes && lerna bootstrap --no-ci -- --package-lock-only --no-audit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "npm-check-updates": "^9.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint",
      "pre-commit": "lint-staged --quiet"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "prettier --write"
  }
}
